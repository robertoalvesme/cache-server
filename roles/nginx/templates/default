server {
	listen 80;
    listen [::]:80;

	root /var/www/{{ item.name }}/html;
	index index.html index.htm;

	# Make site accessible from http://localhost/
	server_name {{ item.name }} www.{{ item.name }} dev.{{ item.name }};

	location / {
		try_files $uri $uri/ =404;
	}

	location /doc/ {
		alias /usr/share/doc/;
		autoindex on;
		allow 127.0.0.1;
		allow ::1;
		deny all;
    }

}
